<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
  <persistence-unit name="mobileStorePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.mobilestore.entity.User</class>
    <class>com.mobilestore.entity.Role</class>
    <class>com.mobilestore.entity.Permission</class>
    <class>com.mobilestore.entity.Category</class>
    <class>com.mobilestore.entity.Product</class>
    <class>com.mobilestore.entity.Order</class>
    <class>com.mobilestore.entity.OrderDetail</class>
    <class>com.mobilestore.entity.Cart</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/mobilestore?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="root"/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="validate"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.jdbc.time_zone" value="UTC"/>
      <property name="hibernate.archive.autodetection" value="class"/>
    </properties>
  </persistence-unit>
</persistence>
